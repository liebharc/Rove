<UserControl x:Class="Rove.View.ProcessInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rove.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <StackPanel.Resources>
                <local:BooleanToVisibilityTextConverter x:Key="BooleanToVisibilityText" />
            </StackPanel.Resources>
            <Label>Title</Label>
            <Button Command="{Binding ShowHide}" Content="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityText}}" /> 
            <Button>Open Log ...</Button>
            <Button Command="{Binding Close}">x</Button>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label>Warnings</Label>
            <Label>0</Label>
            <Label>Errors</Label>
            <Label>0</Label>
        </StackPanel>
        <ScrollViewer DockPanel.Dock="Bottom" >
            <TextBox />
        </ScrollViewer>
    </DockPanel>
</UserControl>
